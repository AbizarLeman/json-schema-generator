{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@json-schema-generator-monorepo/core/src": ["packages/core/src/index.ts"],
      "@json-schema-generator-monorepo/core/src/*": ["packages/core/src/*"],
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "allowImportingTsExtensions": true,
  "noEmit": true
}